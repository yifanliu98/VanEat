extends layout

block content
  br
  br

  .w3-container
  div(class='div_admin')
    div(class='one_line_info')
      h1=title
      P
        a(href='/category/new') Create a New Category  
    br
    ul.w3-ul.w3-card-4
      each category in list_categroy
        li.w3-bar
          //- span.w3-bar-item.w3-button.w3-white.w3-xlarge.w3-right(onclick="this.parentElement.style.display='none'") &times;
          img.w3-bar-item.w3-circle.w3-hide-small(src=category.image style='width:150px')
          .w3-bar-item
            span.w3-large
              br
              br
              a(href=category.url) #{category.category_name} 

      else
        li There are no categories.
